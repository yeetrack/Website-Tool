<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
        android:id="@+id/detailResultTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/purple"
        android:text="友情链接页面"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="15sp"
        android:textSize="@dimen/websiteDetail_title_margin"/>
    
    <TableLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="5sp">
        <TableRow 
            android:layout_marginBottom="8sp">
            <TextView 
                android:id="@+id/friendLinkbaiduCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:layout_marginRight="5sp"
                android:text="百度收录:加载..."
                />
            <TextView 
                android:id="@+id/friendLinkbaiduToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:layout_marginRight="5sp"
                android:text="今日收录:加载..."
                />
            <TextView 
                android:id="@+id/friendLinkbaiduMirror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:layout_marginRight="5sp"
                android:text="百度快照:加载..."
                />
            
        </TableRow>
        <TableRow
            android:layout_marginBottom="8sp">
            <TextView 
                android:id="@+id/friendLinkPR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:text="PR输出值:加载..."/>
            <TextView 
                android:id="@+id/friendLinkOutCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:layout_marginRight="5sp"
                android:text="出站链接:加载..."
                />
            <TextView 
                android:id="@+id/friendLinkBaiduHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:layout_marginRight="5sp"
                android:text="百度首页:加载..."
                />
            
        </TableRow>
        <TableRow 
            android:layout_marginBottom="8sp">
            <TextView 
                android:id="@+id/friendLinkAlexa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:layout_marginRight="5sp"
                android:text="Alexa排名:加载..."
                />
            <TextView 
                android:id="@+id/friendLinkBaiduRank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:text="百度权重:加载..."
                />
        </TableRow>
    </TableLayout>
    <ListView 
        android:id="@+id/friendLinkOutLinkListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:paddingLeft="20sp"></ListView>

</LinearLayout>
